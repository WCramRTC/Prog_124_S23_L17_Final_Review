<Window x:Class="Prog_124_S23_L17_Final_Review.Workouts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog_124_S23_L17_Final_Review"
        mc:Ignorable="d"
        Title="Workouts" Height="450" Width="800">
    <Grid Background="#FFF5A8A8">
        <ListView x:Name="lvExercises" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="35,29,286,90">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Calories Burned" DisplayMemberBinding="{Binding CaloriesBurned}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
